{% extends 'dashboard.twig' %}

{% block content %}

    {% if(api_key) %}

        <div class="ai-chat-wrapper" style="min-height: calc(100vh - 175px)">

            {{ include('@MistralAI/_conversation.twig') }}

            {{ include('@MistralAI/_form.twig') }}

        </div>

    {% else %}

        <div class="alert alert-info">
